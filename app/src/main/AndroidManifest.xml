<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.hes.foreignlanguageschool">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/assignment_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/assignment_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.NavigationActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.LectureActivity"
            android:label="@string/title_activity_lectures"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.AssignmentActivity"
            android:label="@string/title_activity_assignment"
            android:parentActivityName=""
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.TeacherActivity"
            android:label="@string/title_activity_teacher"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.StudentActivity"
            android:label="@string/title_activity_student"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activities.AssignmentEdit" />
        <!-- android:parentActivityName=".Activities.AssignmentActivity"/> -->
        <activity android:name=".Activities.LectureEdit"></activity>
    </application>

</manifest>