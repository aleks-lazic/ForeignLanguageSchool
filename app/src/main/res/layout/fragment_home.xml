<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.hes.foreignlanguageschool.Fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/date_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="73dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="27dp"
        android:text="Date"
        android:textColor="#8BC34A"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/now_lecture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/date_title"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/date_title"
        android:layout_marginTop="63dp"
        android:textSize="16sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/next_lecture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/now_lecture"
        android:layout_alignRight="@+id/now_lecture"
        android:layout_below="@+id/now_lecture"
        android:layout_marginTop="44dp"
        android:textSize="16sp"
        android:text="TextView" />

    <TextClock
        android:id="@+id/now_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/now_lecture"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginTop="7dp" />

    <TextClock
        android:id="@+id/before_next_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/now_clock"
        android:layout_alignStart="@+id/now_clock"
        android:layout_alignTop="@+id/next_lecture" />

    <TextView
        android:id="@+id/assignments_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/assignment_1"
        android:layout_marginLeft="63dp"
        android:layout_marginBottom="25dp"
        android:text="@string/AssignmentsNavigation"
        android:textColor="#8BC34A"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/assignment_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="94dp"
        android:layout_marginLeft="63dp"
        android:layout_marginStart="63dp"
        android:text="CheckBox"
        android:layout_alignBottom="@+id/assignment_2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/assignment_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CheckBox"
        android:layout_marginBottom="47dp"
        android:layout_above="@+id/plus_button"
        android:layout_alignLeft="@+id/assignment_1"
        android:layout_alignStart="@+id/assignment_1" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/plus_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="27dp"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_input_add" />

</RelativeLayout>
